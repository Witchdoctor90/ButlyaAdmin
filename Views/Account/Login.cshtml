@using ButlyaAdmin.ViewModels

@model LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>

<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="/css/Login.css">
</head>
<body>
<div class="center">
    <h1>Авторизація</h1>
    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="text-field">
            <input asp-for="Username" required>
            <span asp-validation-for="Username"></span>
            <label asp-for="Username"></label>
        </div>
        <div class="text-field">
            <input asp-for="Password" required>
            <span asp-validation-for="Password"></span>
            <label asp-for="Password"></label>
        </div>
        <div class="remember-me-field">
            <label asp-for="RememberMe"></label>
            <input asp-for="RememberMe">
        </div>
        <div class="submit-button">
            <input type="submit" value="Вхід">
        </div>
    </form>
</div>
</body>
</html>